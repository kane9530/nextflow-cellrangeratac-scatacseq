{
  "rules": {
    "control": [
      {
        "connector": "type",
        "dependant": "genome",
        "controller": "species"
      }
    ],
    "additional_bindings": [
      {
        "fields": [
          "species",
          "genome"
        ],
        "bindkey": "dockerPrefix",
        "concat_delimiter": ""
      }
    ]
  },
  "fields": [
    {
      "key": "platform",
      "type": "Dropdown",
      "label": "Platforms",
      "default": "illumina",
      "options": [
        {
          "key": 0,
          "value": ""
        },
        {
          "key": "illumina",
          "value": "Illumina"
        }
      ],
      "required": true
    },
    {
      "key": "species",
      "bind": true,
      "type": "Dropdown",
      "label": "Species",
      "default": "human",
      "options": [
        {
          "key": 0,
          "value": ""
        },
        {
          "key": "human",
          "value": "Human"
        }
      ],
      "required": true
    },
    {
      "key": "genome",
      "bind": false,
      "type": "Dropdown",
      "label": "Genome",
      "default": 0,
      "options": [
        {
          "key": 0,
          "value": ""
        },
        {
          "key": "grch38",
          "type": "human",
          "value": "GRCh38"
        }
      ],
      "required": true,
      "dependant": true
    }
  ]
}